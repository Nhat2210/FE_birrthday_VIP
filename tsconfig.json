{
  "include": ["*.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "types": ["vite/client", "naive-ui"],    
    "module": "ESNext",
    "target": "ESNext",
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    
    "lib": ["es2018", "ESNext", "dom", "ES2016", "DOM", "DOM.Iterable"], 
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@pages/*": ["./src/pages/*"],
      "@stores/*": ["./src/stores/*"],
      "@axios": ["./src/api/axios.ts"],
      "@enums/*": ["./src/enums/*"],
      "@plugins": ["./src/plugins"],
      "@directives/*": ["./src/directives/*"],
      "naive-ui": ["node_modules/naive-ui"],
      "vue": ["node_modules/vue/dist/vue.d.ts"]
    },
    "ignoreDeprecations": "5.0",
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
